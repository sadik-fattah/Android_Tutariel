<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:elevation="8dp"
        app:cardCornerRadius="6dp"
        app:cardUseCompatPadding="true"
        android:background="@color/white">
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">
    <ImageView
            android:id="@+id/recImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_add_a_photo_24"
    />

    <TextView
            android:id="@+id/nameId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Student Name"
            android:layout_toRightOf="@+id/recImage"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
    />
    <TextView
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameId"
            android:layout_marginLeft="10dp"
            android:text="Course Name"
            android:textColor="@color/black"
            android:textSize="22sp" />

    <TextView
            android:id="@+id/emailId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone_number"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="22sp" />

    <ImageButton
            android:id="@+id/moreBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_more_vert_24" android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp" android:layout_alignParentStart="true" android:layout_marginStart="375dp"/>
</RelativeLayout>
</androidx.cardview.widget.CardView>