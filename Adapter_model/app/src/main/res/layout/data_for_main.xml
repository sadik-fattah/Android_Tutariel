<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:context=".Alphabetic_List_Activity"
            tools:ignore="MissingConstraints">




        <pl.droidsonroids.gif.GifImageView
                android:id="@+id/letter_conson_gif"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/letter_b"/>
        <pl.droidsonroids.gif.GifImageView
                android:id="@+id/letter_voyel_gif"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/letter_a"/>
        <TextView
                android:id="@+id/letter_base"
                android:layout_width="35dp"
                android:layout_height="55dp"
                android:text=""
                android:textSize="50dp"
                android:fontFamily="@font/francaise_regular"
                android:textColor="@color/purple_200"
        />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>