<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context=".MainActivity">


        <Button android:id="@+id/base_adapter_gridview"
                android:layout_gravity="center_horizontal"
                android:text="Base Adapter gridview"
                android:layout_margin="10dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="8dp"
                android:background="@drawable/costum_button1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        <Button android:id="@+id/base_adapter_listview"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:text="Base Adapter listview"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="8dp"
                android:background="@drawable/costum_button1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        <Button android:id="@+id/arrayadapter"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:text="Array Adapter"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="8dp"
                android:background="@drawable/costum_button1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

</LinearLayout>