<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical" 
                android:layout_width="match_parent"
                android:layout_height="match_parent">
<androidx.cardview.widget.CardView
        android:id="@+id/cvStoriesq"

        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="80dp">
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imgFood"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

</androidx.cardview.widget.CardView>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtName"
            android:text="full name"
            android:textSize="17sp"
            android:textColor="#2196F3"
            android:layout_below="@+id/cvStoriesq"
            android:textAlignment="center"
            android:layout_alignRight="@+id/cvStoriesq"
            android:layout_alignEnd="@+id/cvStoriesq"
            android:layout_marginRight="33dp"
            android:layout_marginEnd="33dp" />

    <TextView
            android:text="email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtPrice"
            android:textSize="17sp"
            android:textColor="#1DCE09"
            android:textAlignment="center"
            android:layout_below="@+id/txtName"
            android:layout_alignRight="@+id/txtName"
            android:layout_alignEnd="@+id/txtName"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp" />
</RelativeLayout>