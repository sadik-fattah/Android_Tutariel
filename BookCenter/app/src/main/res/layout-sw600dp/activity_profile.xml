<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.ProfileActivity">
    <LinearLayout  android:id="@+id/linearLayout1"
                 android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical" >
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="fitEnd"
                    android:src="@drawable/header_shape"/>
            <com.google.android.material.imageview.ShapeableImageView
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:civ_border_width="2dp"
                    app:strokeWidth="2dp"
                    app:strokeColor="@color/colorPrimary"
                    android:scaleType="fitXY"
                    app:civ_border_color="@color/colorPrimaryDark"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="420dp"
                    android:src="@drawable/me1"/>
            <TextView
                    android:text="Sadik AbdelFattah"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="520dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="Morocco"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:layout_marginLeft="540dp"
                    android:layout_marginTop="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="Software Engineer"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:layout_marginTop="90dp"
                    android:layout_marginLeft="520dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
      android:layout_below="@+id/linearLayout1">
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp">
            <ImageView
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/title_shape"/>
            <TextView
                    android:text="About Me"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout  android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           android:layout_below="@+id/linearLayout2">
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/back_booksimage"/>
            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="-127dp">

                <TextView
                        android:id="@+id/scrolltext"
                        android:textStyle="bold"
                        android:textSize="30dp"
                        android:fontFamily="@font/kenneypixel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/scrolltext"
                        android:textColor="@color/colorPrimaryDark"/>
            </ScrollView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/linearLayout3">
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">
            <ImageView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:layout_gravity="right"
                    android:src="@drawable/header_shape"/>
            <TextView
                    android:text="Connect me for work"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="500dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           android:layout_below="@+id/linearLayout4">
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/back_booksimage"/>
            <FrameLayout android:id="@+id/wahtsap"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="100dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageButton
                android:layout_height="70dp"
                android:layout_width="100dp"
                android:src="@drawable/whatsap"
                android:scaleType="fitXY"/>
                <TextView
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/kenneypixel"
                        android:layout_gravity="bottom|center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:text="WHATSAP GROUP" />
            </FrameLayout>
            <FrameLayout android:id="@+id/nsayblik"
                         android:layout_marginTop="10dp"
                         android:layout_marginBottom="10dp"
                         android:layout_marginLeft="300dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageButton
                        android:layout_height="70dp"
                        android:layout_width="100dp"
                        android:src="@drawable/nsayblik"
                        android:scaleType="fitXY"/>
                <TextView
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/kenneypixel"
                        android:layout_gravity="bottom|center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:text="Nsayblik" />
            </FrameLayout>
            <FrameLayout android:id="@+id/twolancer"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="500dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageButton
                        android:layout_height="70dp"
                        android:layout_width="100dp"
                        android:src="@drawable/twolancer"
                        android:scaleType="fitXY"/>
                <TextView
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/kenneypixel"
                        android:layout_gravity="bottom|center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:text="2 Lancer" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bottom_background"
            android:elevation="2dp"
            app:itemIconSize="30dp"
            app:itemIconTint="@drawable/item_selector"
            app:itemRippleColor="@android:color/transparent"
            app:labelVisibilityMode="unlabeled"
            app:menu="@menu/bottom_menu"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</RelativeLayout>